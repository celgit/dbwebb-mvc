{% extends 'base.html.twig' %}

{% block title %}Register book!{% endblock %}

{% block content %}
<div class="textHandle">
    <fieldset>
        <legend>Register book</legend>
        <form method="POST" action="{{ path("register_book") }}">
            <h3>Enter book details</h3>
            <p>
                <br>
                <label for="title">Title:</label><br><input type="text" name="title" id="title" value=""><br>
                <br>
                <label for="isbn">ISBN:</label><br><input type="text" name="isbn" id="isbn" value=""><br>
                <br>
                <label for="author">Author:</label><br><input type="text" name="author" id="author" value=""><br>
                <br>
                <label for="image_url">Image url:</label><br><input type="text" name="image_url" id="image_url" value=""><br>
                <br>
                <input type="submit" name="register" value="Register">
            </p>
        </form>
    </fieldset>
</div>
{% endblock %}
