{% extends "base.html.twig" %}

{% block title %}Draw{% endblock %}

{% block content %}
    <div class="textHandle">
        <fieldset>
            <legend>One card was drawn</legend>
            <form method="POST" action="{{ path("draw-number-of-cards-redirect") }}">
                <p><Label>Enter number of cards to draw:</Label><br>
                    <input type="number" name="numOfDraws" value="{{ numOfDraws }}">
                    <input type="submit" name="draw" value="Draw">
                </p>
            </form>
            <p>This/these card/s was drawn:</p>
            {% for drawnCard in drawnCards[0] %}
                <div class="card {{ drawnCard.color }}">
                    {{ drawnCard.value }}
                    <span class="symbol">
                            {{ drawnCard.suite|raw }}
                    </span>
                </div>
            {% endfor %}
            <p>Remaining cards:</p>
            {% for card in deck %}
                <div class="card {{ card.color }}">
                    {{ card.value }}
                    <span class="symbol">
                        {{ card.suite|raw }}
                    </span>
                </div>
            {% endfor %}
        </fieldset>
    </div>
{% endblock %}