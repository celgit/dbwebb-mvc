{% extends "base.html.twig" %}

{% block title %}Draw{% endblock %}

{% block content %}
    <div class="textHandle">
        <fieldset>
            <legend>Player-hands</legend>
            <h1>Player:</h1>
            <p>
                {% if hands['player'] is not empty %}
                    {% for card in hands['player'].getHand %}
                        <div class="card {{ card.getColor() }}">
                            {{ card.getValue() }}
                            <span class="symbol">
                                {{ card.getSuite()|raw }}
                            </span>
                        </div>
                    {% endfor %}
                {% endif %}
            </p>
            <p> Value of hand:</p>
            <div class={{ hands['player'].getValuePointsColor }}>
                {{ playerHandValue }}
            </div>
                    <h1>Dealer:</h1>
            <p>
            {% if hands['dealer'] is not empty %}
                {% for card in hands['dealer'].getHand %}
                    <div class="card {{ card.getColor() }}">
                        {{ card.getValue() }}
                        <span class="symbol">
                    {{ card.getSuite()|raw }}
                </span>
                    </div>
                {% endfor %}
            {% endif %}
            </p>
            <p> Value of hand:</p>
            <div class={{ hands['dealer'].getValuePointsColor }}>
                {{ dealerHandValue }}
            </div>
            <form method="POST">
                <p><Label>Pick an option:</Label><br>
                    <input type="submit" name="draw" value="Draw"> |
                    <input type="submit" name="done" value="Done"> |
                    <input type="submit" name="reset" value="Reset">
                </p>

                {{ include('form/flash-message.html.twig') }}
            </form>

